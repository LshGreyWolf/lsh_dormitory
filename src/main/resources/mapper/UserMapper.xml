<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lsh.mapper.UserMapper">
    <insert id="addUser">
        insert into tb_user
        <trim prefix="(" suffix=")" prefixOverrides=",">
            <if test="userName !=null">,user_name</if>
            <if test="phone !=null">,phone</if>
            <if test="sex !=null">,sex</if>
            <if test="name !=null">,name</if>
            <if test="type !=null">,type</if>
            <if test="password !=null">,password</if>
            <if test="status !=null">,status</if>
        </trim>
        values
        <trim prefix="(" suffix=")" prefixOverrides=",">
            <if test="userName !=null">,#{userName}</if>
            <if test="phone !=null">,#{phone}</if>
            <if test="sex !=null">,#{sex}</if>
            <if test="name !=null">, #{name}</if>
            <if test="type !=null">,#{type}</if>
            <if test="password !=null">,#{password}</if>
            <if test="status !=null">,#{status}</if>
        </trim>
    </insert>
    <insert id="registerUser">
        insert into tb_user
        <trim prefix="(" suffix=")" prefixOverrides=",">
            <if test="userName != null">,user_name</if>
            <if test="password != null">,password</if>
            <if test="phone != null">,phone</if>
            <if test="type != null">,type</if>
        </trim>
        values
        <trim prefix="(" suffix=")" prefixOverrides=",">
            <if test="userName != null">,#{userName}</if>
            <if test="password != null">,#{password}</if>
            <if test="phone != null">,#{phone}</if>
            <if test="type != null">,#{type}</if>

        </trim>

    </insert>


    <update id="updateUserById">
        update tb_user
        <set>
            <if test="userName !=null">user_name = #{userName},</if>
            <if test="password !=null">password = #{password},</if>
            <if test="name !=null">name = #{name},</if>
            <if test="sex !=null">sex = #{sex},</if>
            <if test="type !=null">type = #{type},</if>
            <if test="phone !=null">phone = #{phone}</if>
        </set>
        where
        <if test="id != null">id = #{id}</if>


    </update>
    <update id="updateStatusById">
        update tb_user
        <set>
            <if test="status != null">status = #{status}</if>
        </set>
        where id= #{id}
    </update>

    <select id="selectAll" resultType="com.lsh.domain.User">
        select *
        from tb_user
    </select>
    <select id="login" resultType="com.lsh.domain.User">
        select *
        from tb_user
        where user_name = #{userName}
          and password = #{password}

    </select>
    <select id="queryByPage" resultType="com.lsh.domain.User">

        select *
        from tb_user
        <include refid="UserFindCriteria"></include>
    </select>
    <select id="getUser" parameterType="com.lsh.domain.User" resultType="com.lsh.domain.User">

        select *
        from tb_user
        <include refid="UserFindCriteria"></include>
    </select>
    <select id="findByUserName" resultType="com.lsh.domain.User">

        select
        *
        from tb_user
        where user_name = #{userName}
    </select>
    <sql id="UserFindCriteria">
        <where>
            <if test="id != null">id = #{id}</if>
            <if test="userName != null and userName != ''">and user_name like concat('%',#{userName},'%')</if>
            <if test="password != null and password != ''">and password = #{password}</if>
            <if test="name != null and name != ''">and name like concat('%',#{name},'%')</if>
            <if test="phone != null and phone != ''">and phone = #{phone}</if>
            <if test="type != null">and type = #{type}</if>
            <if test="sex != null and sex != ''">and sex = #{sex}</if>
            <if test="status != null and sex != ''">and status = #{status}</if>
        </where>
    </sql>
</mapper>
